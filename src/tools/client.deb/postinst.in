set -e

if [ -x "/usr/sbin/@PACKAGE_NAME@" ]
then
    if [ -x "`which setcap`" ]
    then
        setcap cap_net_raw,cap_net_admin,cap_setgid,cap_setuid=ep \
            "/usr/sbin/@PACKAGE_NAME@"
    else
        chown 0:0 "/usr/sbin/@PACKAGE_NAME@"
        chmod +xs "/usr/sbin/@PACKAGE_NAME@"
    fi
fi

