#ifndef __CFG_H
#define __CFG_H

/*
 * The name of the package.
 */
#define PACKAGE_NAME        "@PACKAGE_NAME@"

/*
 * The name of the program.
 */
#ifdef CLIENT
#define PROGRAM_NAME        PACKAGE_NAME
#endif      /* CLIENT */

#if defined(SERVER) || defined(TOOL)
#define PROGRAM_NAME        "@PACKAGE_NAME@d"
#endif      /* SERVER */

/*
 * The human readable name of the program.
 */
#define PROGRAM_NAME_LONG   "@PACKAGE_NAME_LONG@"

/*
 * The program's version.
 */
#define PROGRAM_VERSION     "@PACKAGE_VERSION@"

/*
 * The program's platform.
 */
#define PLATFORM            "@PLATFORM@"

/*
 * 32-bit vs. 64-bit?
 */
#define BITS                @BITS@

/*
 * The program's working directory.
 */
#ifdef CLIENT
#ifdef WINDOWS
#define PROGRAM_DIR         "C:\\Program Files\\" PROGRAM_NAME_LONG "\\"
#else       /* WINDOWS */
#define PROGRAM_DIR         "." PROGRAM_NAME
#endif      /* WINDOWS */
#endif      /* CLIENT */

#if defined(SERVER) || defined(TOOL)
#define PROGRAM_DIR         "/etc/" PROGRAM_NAME "/"
#endif      /* SERVER */

/*
 * The default UI port.
 */
#define PROGRAM_UI_PORT     40404

/*
 * size_t format.
 */
#ifdef WINDOWS
#if BITS == 32
#define SIZE_T_FMT          "%u"
#else       /* BITS == 32 */
#define SIZE_T_FMT          "%Iu"
#endif      /* BITS == 32 */
#else       /* WINDOWS */
#define SIZE_T_FMT          "%zu"
#endif      /* WINDOWS */

/*
 * Main function name.
 */
#ifdef WINDOWS
#define MAIN                client_main
#else       /* WINDOWS */
#define MAIN                main
#endif      /* WINDOWS */

/*
 * MACOSX is really FREEBSD
 */
#ifdef MACOSX
#define FREEBSD
#endif      /* MACOSX */

#endif      /* __CFG_H */
